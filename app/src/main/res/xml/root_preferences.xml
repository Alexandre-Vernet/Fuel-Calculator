<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/car">
        <EditTextPreference
                app:key="averageConsumption"
                app:title="@string/averageConsumption"
                app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/fuel">
        <EditTextPreference
                app:key="fuelPrice"
                app:title="@string/fuelPrice"
                app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>
